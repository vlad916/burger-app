<div class="container text-center">
	<div>
		<img class="pic" src="/assets/image/1.jpg">
	</div>

	<div class="row">
		<div class="col-sm-6 text-center">
			<ul class="devour">
				{{#each burgers}}
				{{#unless devoured}}
				<li>
					<p>{{id}}. {{burger_name}} <button class="press" data-burgerid="{{id}}"> Devour it!</button></p>
				</li>
				{{/unless}}
				{{/each}}
			</ul>
		</div>


		<div class="burger-div">
			<div class="col-sm-6 text-center">
				<ul class="devoured">
					{{#each burgers}}
					{{#if devoured}}
					<li>
						<p>{{id}}. {{burger_name}}</p>
					</li>
					{{/if}}
					{{/each}}
				</ul>
			</div>
		</div>
	</div>
	<form action="/api/burgers" method="POST">
		<textarea type="text" name="burger" class="input"></textarea>
		<p>Enter a burger you want to eat. Then, click the "Add Burger" button.</p>
		<button type="submit" id="add">Add Burger</button>
	</form>

</div>